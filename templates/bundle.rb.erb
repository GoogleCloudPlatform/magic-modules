require 'open3'

class Bundle
  def self.run(args)
    Open3.popen2e(*%w[bundle exec].concat(args)) do |_, stdout_err, wait_thr|
      return -2 if wait_thr.nil?

      exit_code = wait_thr.value.to_i
      puts stdout_err.readlines unless exit_code.zero?

      return exit_code
    end
    -1
  end
end
