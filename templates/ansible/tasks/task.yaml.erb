<%
  again = ''
  if noop
    again = ' that already exists' if state == 'present'
    again = ' that does not exist' if state == 'absent'
  end
  verb = verbs[state.to_sym]
-%>
- name: <%= verb -%> a <%= object_name_from_module_name(@name) -%><%= again %>
  <%= @name -%>:
<%=
  lines(indent(compile_string(hash, @code.to_yaml.gsub('---', '').strip), 6))
-%>
      scopes:
<% (@scopes || object.__product.scopes).each do |scope| -%>
        - <%= scope %>
<% end -%>
<% if state && state != 'facts' -%>
      state: <%= state %>
<% end # if state -%>
<% if @register -%>
  register: <%= @register %>
<% end -%>
