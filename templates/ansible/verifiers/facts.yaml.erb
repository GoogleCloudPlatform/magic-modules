<%
  module_name = ["gcp_#{object.__product.prefix[1..-1]}",
                 object.name.underscore,
                 'facts'].join('_')
-%>
- name: verify that <%= object.name.underscore -%> was <%= lines(verbs[_state.to_sym]) -%>
  <%= module_name -%>:
<% if object.facts.has_filters && object.facts.filter.name == 'filters' -%>
      filters:
         - name = <%= name_parameter %>
<% end #if object.facts.has_filters -%>
<% @parameters.each do |k, v| -%>
<%
  value = if @parameters.keys.first == k && v.include?('{{')
            "\"#{v}\""
          else
            v
          end
-%>
      <%= k -%>: <%= lines(value) -%>
<% end -%>
      project: "{{ gcp_project }}"
      auth_kind: "{{ gcp_cred_kind }}"
      service_account_file: "{{ gcp_cred_file }}"
      scopes:
        - <%= lines(object.__product.scopes[0]) -%>
  register: results
- name: verify that command succeeded
  assert:
    that:
      - results['items'] | length == <%= _state == 'present' ? 1 : 0 %>
