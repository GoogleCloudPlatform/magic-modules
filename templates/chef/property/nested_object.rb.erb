                                    ["{ self: #{prop.out_name}",
                                     "other: other.#{prop.out_name} }"]
                                      .join(', '),
                                    ['{',
                                     indent_list([
                                                   "self: #{prop.out_name}",
                                                   "other: other.#{prop.out_name}"
                                                 ], 2),
                                     '}']
                                  ], 0, 12
                                )
                              end, 2)
  compare_code << ']'
