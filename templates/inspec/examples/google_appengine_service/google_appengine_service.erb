<% gcp_project_id = "#{external_attribute('gcp_project_id', doc_generation)}" -%>
<% gcp_standardappversion_region = "#{external_attribute('gcp_standardappversion_region', doc_generation)}" -%>
<% standardappversion = grab_attributes['standardappversion'] -%>

describe google_appengine_service(project: <%= gcp_project_id -%>, location: <%= gcp_standardappversion_region -%>, id: <%= doc_generation ? "'#{standardappversion['service']}'" : "standardappversion['service']" -%>, name: <%= doc_generation ? "'#{standardappversion['name']}'" : "standardappversion['name']" -%>) do
  it  { should exist }
  its {'name' { should eq <%= doc_generation ? "'#{standardappversion['name']}'" : "standardappversion['name']" -%> } }
  its {'id' { should eq <%= doc_generation ? "'#{standardappversion['service']}'" : "standardappversion['service']" -%> } }
end