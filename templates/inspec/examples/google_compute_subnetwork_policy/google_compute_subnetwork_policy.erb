<% gcp_project_id = "#{external_attribute('gcp_project_id', doc_generation)}" -%>
<% gcp_location = "#{external_attribute('gcp_location', doc_generation)}" -%>
<% subnetwork_policy_binding = grab_attributes['subnetwork_policy_binding'] -%>
describe google_compute_subnetwork_policy(project: <%= gcp_project_id -%>, region: <%= gcp_location -%>, subnetwork: 'test-subnetwork') do
  it { should exist }
  its('bindings.first.role') { should eq <%= doc_generation ? "'#{subnetwork_policy_binding['role']}'" : "subnetwork_policy_binding['role']" -%>}
  its('bindings.first.members') { should include <%= doc_generation ? "'#{subnetwork_policy_binding['member']}'" : "subnetwork_policy_binding['member']" -%>}
  end

describe google_compute_subnetwork_policy(project: <%= gcp_project_id -%>, region: <%= gcp_location -%>, subnetwork: 'nonexistent') do
  it { should_not exist }
end