<% gcp_disk_image = "#{old_attribute('gcp_disk_image', doc_generation)}" -%>
most_recent_image = google_compute_image({project: <%= doc_generation ? "'#{gcp_disk_image.split('/').first}'" : "gcp_disk_image.split('/').first" -%>, name: <%= doc_generation ? "'#{gcp_disk_image.split('/').last}'" : "gcp_disk_image.split('/').last" -%>})
describe google_compute_disks({project: <%= "#{old_attribute('gcp_project_id', doc_generation)}" -%>, zone: <%= "#{old_attribute('gcp_zone', doc_generation)}" -%>}) do
  it { should exist }
  its('names') { should include <%= "#{old_attribute('gcp_disk_name', doc_generation)}" -%> }
  its('source_images') { should include most_recent_image.self_link }
end