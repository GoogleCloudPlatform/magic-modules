<% project_name = 'chef-inspec-gcp' -%>
<% zone = 'zone' -%>
<% disk_name = 'my_disk' -%>
<% disk_image = 'debian/debian-8-jessie-v20170523' -%>
<% disk_type = 'gcp_compute_disk_type' -%>
most_recent_image = google_compute_image({project: <%= doc_generation ? "'#{disk_image.split('/').first}'" : "disk_image.split('/').first" -%>, name: <%= doc_generation ? "'#{disk_image.split('/').last}'" : "disk_image.split('/').last" -%>})

describe google_compute_disk({project: <%= doc_generation ? "'#{project_name}'" : "project_name" -%>, name: <%= doc_generation ? "'#{disk_name}'" : "disk_name" -%>, zone: <%= doc_generation ? "'#{zone}'" : "zone" -%>}) do
  it { should exist }
  # Test that the image is the most recent image for the family
  its('source_image') { should match most_recent_image.self_link }
  its('type') { should match <%= doc_generation ? "'#{disk_type}'" : "disk_type" -%> }
end

describe.one do
  google_compute_disk({project: <%= doc_generation ? "'#{project_name}'" : "project_name" -%>, name: <%= doc_generation ? "'#{disk_name}'" : "disk_name" -%>, zone: <%= doc_generation ? "'#{zone}'" : "zone" -%>}).labels.each_pair do |key, value|
    describe key do
      it { should cmp "environment" }
    end
  end
end