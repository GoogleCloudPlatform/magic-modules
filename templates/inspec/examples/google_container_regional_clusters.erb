<% gcp_project_id = "#{external_attribute('gcp_project_id', doc_generation)}" -%>
<% regional_cluster = grab_attributes['regional_cluster'] -%>
describe google_container_regional_clusters(project: <%= gcp_project_id -%>, location: <%= doc_generation ? "'#{regional_cluster['region']}'" : "regional_cluster['region']" -%>) do
  its('count') { should be >= 1 }
  its('names') { should include <%= doc_generation ? "'#{regional_cluster['name']}'" : "regional_cluster['name']" -%> }
  its('initial_node_counts') { should include <%= doc_generation ? "'#{regional_cluster['initial_node_count']}'" : "regional_cluster['initial_node_count']" -%>}
end