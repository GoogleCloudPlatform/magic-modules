# frozen_string_literal: false

<%= lines(autogen_notice :ruby) -%>
require 'gcp_backend'
class <%= object.name -%>s < GcpResourceBase
<%
name = "google_#{product_ns.downcase}_#{object.name.underscore}"
-%>
  name '<%= name.pluralize -%>'
  desc '<%= object.name -%> plural resource'
  supports platform: 'gcp'

  attr_reader :table

  filter_table_config = FilterTable.create
<% object.all_user_properties.each do |prop| -%>

  <%= "filter_table_config.add(:#{prop.out_name.pluralize}, field: :#{prop.name})" -%>
<% end # object.all_user_properties.each do -%>


  filter_table_config.connect(self, :table)

<%
base = "'#{object.self_link_url[0].join}'"
-%>
  def base
    <%= base %>
  end

  def url
    '<%= format_url(object.base_url) %>'
  end
<% has_modified_api_name = object.all_user_properties.any? {|prop| prop.api_name != prop.name } -%>
<% if has_modified_api_name -%>

  def api_names
    {
<% object.all_user_properties.each do |prop| -%>
<% if prop.api_name != prop.name -%>
      '<%= prop.api_name -%>' => '<%= prop.name -%>',
<% end # if prop.api_name -%>
<% end # object.all_user_properties.each -%>
    }
  end
<% end # has_modified_api_name -%>

<% 
link_query = object.self_link_query || object.collection_url_response
-%>
  def initialize(params = {})
    super(params.merge({ use_http_transport: true }))
    @params = params
    @table = fetch_wrapped_resource(<%= "'#{link_query.items}'" -%>)
  end

  def fetch_wrapped_resource(wrap_path)
    # fetch_resource returns an array of responses (to handle pagination)
    result = @connection.fetch_all(base, url, @params)
    return if result.nil?

    # Conversion of string -> object hash to symbol -> object hash that InSpec needs
    converted = []
    result.each do |response|
      next if response.nil? || !response.key?(wrap_path)
      response[wrap_path].each do |hash|
        hash_with_symbols = {}
<% if has_modified_api_name -%>
        hash.each_pair { |k, v| api_names.key?(k) ? hash_with_symbols[api_names[k].to_sym] = v : hash_with_symbols[k.to_sym] = v }
<% else -%>
        hash.each_pair { |k, v| hash_with_symbols[k.to_sym] = v }
<% end -%>
<% object.all_properties.each do |prop|
	if prop.name_from_self_link
-%>
        <%= "hash_with_symbols[:#{prop.out_name}] = name_from_self_link(hash_with_symbols[:#{prop.out_name}])" -%>

<% end 
end -%>
        converted.push(hash_with_symbols)
      end
    end

    converted
  end
end
