<%    descriptor = flatten_queue.shift -%>
<%=   lines(build_flatten_method(descriptor)) -%>

<%  end -%>

<%  if object.custom_code.extra_functions -%>
<%=   lines(compile(get_custom_template_path(object.custom_code.extra_functions))) -%>
<%  end -%>