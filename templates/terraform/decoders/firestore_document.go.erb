// We use this decoder to add the path field
if name, ok := res["name"]; ok {
	re := regexp.MustCompile("^projects/[^/]+/databases/[^/]+/documents/(.+)$")
	match := re.FindStringSubmatch(name.(string))
  if len(match) > 0{
		res["path"] = match[1]
	}
}
return res, nil
