provider "google-beta" {
  region = "us-central1"
  zone   = "us-central1-a"
}

resource "google_compute_resource_policy" "foo" {
  provider = "google-beta"
  name = "<%= ctx[:vars]['name'] %>"
  region = "us-central1"
  snapshot_schedule_policy {
    schedule {
      daily_schedule {
        days_in_cycle = 1
        start_time = "04:00"
      }
    }
  }
}
