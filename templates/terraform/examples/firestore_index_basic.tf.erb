resource "google_firestore_index" "<%= ctx[:primary_resource_id] %>" {
  project = "<%= ctx[:test_env_vars]['project_id'] %>"

  collection = "chatrooms"

  fields {
    field_path = "name"
    order      = "ASCENDING"
  }

  fields {
    field_path = "description"
    order      = "DESCENDING"
  }

  fields {
    field_path = "__name__"
    order      = "DESCENDING"
  }
}
