resource "google_ml_engine_job" "<%= ctx[:primary_resource_id] -%>" {
  job_id = "ml_job_container"

  training_input {
    package_uris = ["<%= ctx[:vars]['gcs_pkg_uri'] -%>"]

    master_config {
      image_uri = "<%= ctx[:vars]['gcp_img_uri'] -%>"
    }

    args = [
      "--model-dir=gs://aiptrainingbucket/pytorch_model_test4AIP20191105_143006",
      "--epochs=10",
    ]

    region        = "us-east1"
    scale_tier    = "BASIC"
    python_module = "trainer.task"
  }
}
