resource "google_compute_firewall" "default" {
  name    = "<%= ctx[:vars]['firewall_name'] %>"
  network = google_compute_network.default.name

  allow {
    protocol = "icmp"
  }

  allow {
    protocol = "tcp"
    ports    = ["80", "8080", "1000-2000"]
  }

  source_tags = ["web"]
}

resource "google_compute_network" "default" {
  name = "<%= ctx[:vars]['network_name'] %>"
}
