resource "google_secret_manager_secret" "<%= ctx[:primary_resource_id] %>" {
  provider = google-beta

  secret_id = "<%= ctx[:vars]['secret_id'] %>"
  
  labels = {
    label = "my-label"
  }

  replication {
    user_managed {
      replicas {
        location = "us-central1"
      }
      replicas {
        location = "us-east1"
      }
    }
  }
}
