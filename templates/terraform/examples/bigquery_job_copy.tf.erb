resource "google_bigquery_table" "source-one" {
  dataset_id = google_bigquery_dataset.source-one.dataset_id
  table_id   = "<%= ctx[:vars]['job_id'] %>_one_table"
}

resource "google_bigquery_dataset" "source-one" {
  dataset_id                  = "<%= ctx[:vars]['job_id'] %>_one_dataset"
  friendly_name               = "test"
  description                 = "This is a test description"
  location                    = "US"
}

resource "google_bigquery_table" "source-two" {
  dataset_id = google_bigquery_dataset.source-two.dataset_id
  table_id   = "<%= ctx[:vars]['job_id'] %>_two_table"
}

resource "google_bigquery_dataset" "source-two" {
  dataset_id    = "<%= ctx[:vars]['job_id'] %>_two_dataset"
  friendly_name = "test"
  description   = "This is a test description"
  location      = "US"
}

resource "google_bigquery_table" "dest" {
  dataset_id = google_bigquery_dataset.dest.dataset_id
  table_id   = "<%= ctx[:vars]['job_id'] %>_dest_table"
}

resource "google_bigquery_dataset" "dest" {
  dataset_id    = "<%= ctx[:vars]['job_id'] %>_dest_dataset"
  friendly_name = "test"
  description   = "This is a test description"
  location      = "US"
}

resource "google_kms_crypto_key" "crypto_key" {
  name     = "<%= ctx[:vars]['key_name'] %>"
  key_ring = google_kms_key_ring.key_ring.self_link
}

resource "google_kms_key_ring" "key_ring" {
  name     = "<%= ctx[:vars]['keyring_name'] %>"
  location = "global"
}

resource "google_bigquery_job" "<%= ctx[:primary_resource_id] %>" {
  job_id     = "<%= ctx[:vars]['job_id'] %>"

  copy {
    source_tables {
      table_reference {
        project_id = google_bigquery_table.source-one.project
        dataset_id = google_bigquery_table.source-one.dataset_id
        table_id   = google_bigquery_table.source-one.table_id
      }
    }

    source_tables {
      table_reference {
        project_id = google_bigquery_table.source-two.project
        dataset_id = google_bigquery_table.source-two.dataset_id
        table_id   = google_bigquery_table.source-two.table_id
      }
    }

    destination_table {
      project_id = google_bigquery_table.dest.project
      dataset_id = google_bigquery_table.dest.dataset_id
      table_id   = google_bigquery_table.dest.table_id
    }

    destination_encryption_configuration {
      kms_key_name = google_kms_crypto_key.crypto_key.self_link
    }
  }
}