resource "google_dataproc_cluster" "basic" {
  name     = "<%= ctx[:vars]['name'] %>"
  region   = "us-central1"

  cluster_config {
    autoscaling_config {
      policy_uri = google_dataproc_autoscaling_policy.<%= ctx[:primary_resource_id] %>.name
    }
  }
}

resource "google_dataproc_autoscaling_policy" "<%= ctx[:primary_resource_id] %>" {
  policy_id = "<%= ctx[:vars]['name'] %>"
  location  = "us-central1"

  worker_config {
    max_instances = 3
  }

  basic_algorithm {
    yarn_config {
      graceful_decommission_timeout = "30s"

      scale_up_factor   = 0.5
      scale_down_factor = 0.5
    }
  }
}
