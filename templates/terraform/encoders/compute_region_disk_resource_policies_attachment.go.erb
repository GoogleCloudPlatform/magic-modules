config := meta.(*Config)
project, err := getProject(d, config)
if err != nil {
  return nil, err
}

region, err := getRegion(d, config)
if err != nil {
	return nil, err
}
if region == "" {
	return nil, fmt.Errorf("region must be non-empty - set in resource or at provider-level")
}

