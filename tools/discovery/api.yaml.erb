--- !ruby/object:Api::Product
name: Google Cloud <%= ctx[:results]['title'] %>
prefix: g<%= ctx[:results]['title'].split[0].downcase %>
versions:
  - !ruby/object:Api::Product::Version
    name: <%= ctx[:results]['version'] %>
    base_url: <%= ctx[:results]['baseUrl'] %>
scopes:
  <% ctx[:results]['auth']['oauth2']['scopes'].each do |scope| -%>
    - <%= scope[0] %>
  <% end -%>
objects:
<% ctx[:resources].each do |object| -%>
  - !ruby/object:Api::Resource
    name: '<%= object.name.capitalize %>'
    base_url: <%= object.base_url %>
    description: |
      <%= object.schema['description'] %>
    properties:
<% (object.schema['properties'] || []).each do |prop| -%>
<%
  prop_name = prop[0]
  prop_obj = prop[1]
-%>
      - !ruby/object:Api::Type::<%= (prop_obj['type'] || '').capitalize %>
        name: <%= prop_name %>
        description: <%= prop_obj['description'] %>
<% if (prop_obj['description'] || '').include? '[Required]' -%>
        required: true
<% end -%>
<% if (prop_obj['description'] || '').include? "Output-only" %>
        output: true
<% end -%>
<% end -%>
<% end -%>
