--- !ruby/object:Api::Product
name: Google Cloud <%= ctx[:product].title %>
prefix: g<%= ctx[:product].title.split[0].downcase %>
versions:
  - !ruby/object:Api::Product::Version
    name: <%= ctx[:product].version %>
    base_url: <%= ctx[:product].base_url %>
scopes:
    - <%= ctx[:product].scope %>
objects:
<% ctx[:product].resources.each do |object| -%>
  - !ruby/object:Api::Resource
    name: '<%= object.name.capitalize %>'
    base_url: <%= object.base_url %>
<% if object.virtual -%>
    virtual: true
<% end -%>
    description: |
      <%= object.schema['description'] %>
    properties:
<% object.properties.each do |prop| -%>
<%= lines(indent(compile_file({ prop: prop }, 'property.yaml.erb'), 6)) -%>
<% end -%>
<% end -%>
