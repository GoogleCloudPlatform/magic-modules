{{define "PropertyYaml"}}
- name: {{$.Name}}
  type: {{$.Type}}
{{ if eq .Type "NestedObject"  }}
properties:
{{- range $prop := $.Properties }}
  {{$prop.Name}}
  {{template "PropertyYaml" $prop}}
  }
{{- end}}
{{- end}}
  description: |
    {{template "DescriptionYaml" $}}
{{ if $.Required }}  required: true{{- end }}
{{ if $.Immutable }}  immutable: true{{- end }}
{{ if $.Output }}  output: true{{- end }}
{{ if $.UrlParamOnly }}  url_param_only: true{{- end }}
{{end}}