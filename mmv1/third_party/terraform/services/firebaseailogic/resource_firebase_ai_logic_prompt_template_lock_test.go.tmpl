func TestAccFirebaseAILogicPromptTemplateLock_basic(t *testing.T) {
	t.Parallel()

	context := map[string]interface{}{
		"project_id":    envvar.GetTestProjectFromEnv(),
		"random_suffix": acctest.RandString(t, 10),
	}

	acctest.VcrTest(t, resource.TestCase{
		PreCheck:                 func() { acctest.AccTestPreCheck(t) },
		ProtoV5ProviderFactories: acctest.ProtoV5ProviderBetaFactories(t),
		CheckDestroy:             testAccCheckFirebaseAILogicPromptTemplateLockDestroySidecarProducer(t),
		Steps: []resource.TestStep{
			{
				Config: testAccFirebaseAILogicPromptTemplateLock_basic(context),
				Check: resource.ComposeTestCheckFunc(
					resource.TestCheckResourceAttr("google_firebase_ai_logic_prompt_template_lock.primary", "locked", "true"),
				),
			},
			{
				ResourceName:            "google_firebase_ai_logic_prompt_template_lock.primary",
				ImportState:             true,
				ImportStateVerify:       true,
				ImportStateVerifyIgnore: []string{"location"},
			},
			{
				Config: testAccFirebaseAILogicPromptTemplateLock_unlocked(context),
				Check: resource.ComposeTestCheckFunc(
					// Lock resource effectively deleted
				),
			},
		},
	})
}


func testAccFirebaseAILogicPromptTemplateLock_basic(context map[string]interface{}) string {
	return acctest.Nprintf(`
resource "google_firebase_ai_logic_prompt_template" "locked_template" {
  provider = google-beta
  project  = "%{project_id}"
  location = "global"
  template_id = "tf-test-lock-%{random_suffix}"
  template_string = <<EOF
---
model: googleai/gemini-1.5-flash
---
Hello Lock Test
EOF
}

resource "google_firebase_ai_logic_prompt_template_lock" "primary" {
  provider = google-beta
  project  = google_firebase_ai_logic_prompt_template.locked_template.project
  location = google_firebase_ai_logic_prompt_template.locked_template.location
  template_id = google_firebase_ai_logic_prompt_template.locked_template.template_id
}
`, context)
}

