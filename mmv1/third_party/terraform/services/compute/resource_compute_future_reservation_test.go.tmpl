	reservation_name = "tf-reservation-up%{random_suffix}"
  
	share_settings {
	  share_type = "SPECIFIC_PROJECTS"
	  projects   = ["%{project}"]
	}
	specific_reservation_required = false
	time_window {
		start_time = "2025-08-01T00:00:00Z"
