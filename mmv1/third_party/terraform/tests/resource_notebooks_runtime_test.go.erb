func testAccNotebooksRuntime_create_virtual_machine(name string) string {
	return fmt.Sprintf(`

resource "google_notebooks_runtime" "test" {
  name = "%s"
  location = "us-central1-a"
  metadata = {
    terraform  = "true"
  }
	virtual_machine {
    virtual_machine_config {
			zone = "us-central1-c"
      machine_type = "n1-standard-4"
      data_disk {
        initialize_params {
          disk_size_gb = "100"
          disk_type = "PD_STANDARD"
        }
      }
    }
  }
}
`, name)
}

