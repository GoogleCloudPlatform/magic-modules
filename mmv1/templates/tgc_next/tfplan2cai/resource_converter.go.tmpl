    if obj == nil {
        obj = make(map[string]interface{})
    }
{{- end }}

{{- if $.CustomCode.TgcEncoder }}
    return resource{{ $.ResourceName -}}TgcEncoder(d, config, obj)
{{- else }}
    return obj, nil
{{- end}}
}

