<% gcp_project_id = "#{external_attribute(pwd, 'gcp_project_id', doc_generation)}" -%>
<% sql_connect = grab_attributes(pwd)['sql_connect'] -%>

describe google_sql_connects(project: <%= gcp_project_id -%>, instance: <%= doc_generation ? "'#{sql_connect['instance']}'" : "sql_connect['instance']" -%>) do
it { should exist }
its('region') { should include <%= doc_generation ? "'#{sql_connect['region']}'" : "sql_connect['region']" -%> }
its('database_version') { should include <%= doc_generation ? "'#{sql_connect['database_version']}'" : "sql_connect['database_version']" -%> }
its('backend_type') { should include <%= doc_generation ? "'#{sql_connect['backend_type']}'" : "sql_connect['backend_type']" -%> }
end
