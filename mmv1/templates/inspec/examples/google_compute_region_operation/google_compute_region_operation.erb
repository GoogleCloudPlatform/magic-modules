<% gcp_project_id = "#{external_attribute(pwd, 'gcp_project_id', doc_generation)}" -%>
<% region_operation = grab_attributes(pwd)['region_operation'] -%>
describe google_compute_region_operation(project: <%= gcp_project_id -%>, region: <%= doc_generation ? "'#{region_operation['region']}'" : "region_operation['region']" -%>, name: <%= doc_generation ? "'#{region_operation['name']}'" : "region_operation['name']" -%>) do
it { should exist }
its('name') { should eq <%= doc_generation ? "'#{region_operation['name']}'" : "region_operation['name']" -%> }
its('status') { should eq <%= doc_generation ? "'#{region_operation['size']}'" : "region_operation['status']" -%> }
its('progress') { should eq <%= doc_generation ? "'#{region_operation['progress']}'" : "region_operation['progress']" -%> }
end

describe google_compute_region_operation(project: <%= gcp_project_id -%>, region: <%= doc_generation ? "'#{region_operation['region']}'" : "region_operation['region']" -%>, name: 'nonexistent') do
it { should_not exist }
end