<% gcp_project_id = "#{external_attribute(pwd, 'gcp_project_id', doc_generation)}" -%>
<% region_operation = grab_attributes(pwd)['region_operation'] -%>
describe google_compute_region_operations(project: <%= gcp_project_id -%>, region: <%= doc_generation ? "'#{region_operation['region']}'" : "region_operation['region']" -%>) do
	it { should exist }
	its('names') { should include <%= doc_generation ? "'#{region_operation['name']}'" : "region_operation['name']" -%> }
	its('progresses') { should include <%= doc_generation ? "'#{region_operation['progress']}'" : "region_operation['progress']" -%> }
end