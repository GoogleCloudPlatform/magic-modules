<% gcp_project_id = "#{external_attribute(pwd, 'gcp_project_id', doc_generation)}" -%>
<% global_operation = grab_attributes(pwd)['global_operation'] -%>
describe google_compute_global_operation(project: <%= gcp_project_id -%>, name: <%= doc_generation ? "'#{global_operation['name']}'" : "global_operation['name']" -%>) do
  it { should exist }
  its('operation_type') { should include <%= doc_generation ? "'#{global_operation['operationType']}'" : "global_operation['operationType']" -%> }
end