resource "google_gke_hub_feature" "feature" {
  name = "policycontroller"
  location = "global"
  fleetDefaultMemberConfig {
    policycontroller {
      hubConfig {
        installSpec = "ENABLED"
        policyContent {
          bundles {
            name = ""
            # exemptedNamespaces = ["foo", "bar"]
          }
          templateLibrary {
            installation = "ALL"
          }
        }
        auditIntervalSeconds = 30
        referentialRulesEnabled = true
      }
    }
  }
}
