resource "google_dataplex_aspect_type" "aspect-type-full-one" {
  aspect_type_id         = "{{index $.Vars "aspect_type_name"}}-one"
  location     = "us-central1"
  project      = "{{index $.TestEnvVars "project_number"}}"

  metadata_template = <<EOF
{
  "name": "tf-test-template",
  "type": "record",
  "recordFields": [
    {
      "name": "type",
      "type": "enum",
      "annotations": {
        "displayName": "Type",
        "description": "Specifies the type of view represented by the entry."
      },
      "index": 1,
      "constraints": {
        "required": true
      },
      "enumValues": [
        {
          "name": "VIEW",
          "index": 1
        }
      ]
    }
  ]
}
EOF
}

resource "google_dataplex_aspect_type" "aspect-type-full-two" {
  aspect_type_id         = "{{index $.Vars "aspect_type_name"}}-two"
  location     = "us-central1"
  project      = "{{index $.TestEnvVars "project_number"}}"

  metadata_template = <<EOF
{
  "name": "tf-test-template",
  "type": "record",
  "recordFields": [
    {
      "name": "story",
      "type": "enum",
      "annotations": {
        "displayName": "Story",
        "description": "Specifies the story of an entry."
      },
      "index": 1,
      "constraints": {
        "required": true
      },
      "enumValues": [
        {
          "name": "SEQUENCE",
          "index": 1
        }
      ]
    }
  ]
}
EOF
}

resource "google_dataplex_entry_group" "entry-group-full" {
  entry_group_id = "{{index $.Vars "entry_group_name"}}"
  project = "{{index $.TestEnvVars "project_number"}}"
  location = "us-central1"
}

resource "google_dataplex_entry_type" "entry-type-full" {
  entry_type_id = "{{index $.Vars "entry_type_name"}}"
  project = "{{index $.TestEnvVars "project_number"}}"
  location = "us-central1"

  required_aspects {
    type = google_dataplex_aspect_type.aspect-type-full-one.name
  }
}

resource "google_dataplex_entry" "{{$.PrimaryResourceId}}" {
  entry_group_id = google_dataplex_entry_group.entry-group-full.entry_group_id
  project = "{{index $.TestEnvVars "project_number"}}"
  location = "us-central1"
  entry_id = "{{index $.Vars "entry_id"}}"
  entry_type = google_dataplex_entry_type.entry-type-full.name
  fully_qualified_name = "bigquery:{{index $.TestEnvVars "project_number"}}.test-dataset"
  parent_entry = "projects/{{index $.TestEnvVars "project_number"}}/locations/us-central1/entryGroups/{{index $.Vars "entry_group_name"}}/entries/some-other-entry"
  entry_source {
    resource = "bigquery:{{index $.TestEnvVars "project_number"}}.test-dataset"
    system = "System III"
    platform = "BigQuery"
    display_name = "Human readable name"
    description = "Description from source system"
    labels = {
      "some-label": "some-value"
    }

    ancestors {
      name = "ancestor-one"
      type = "type-one"
    }

    ancestors {
      name = "ancestor-two"
      type = "type-two"
    }

    create_time = "2023-08-03T19:19:00.094Z"
    update_time = "2023-08-03T20:19:00.094Z"
  }

  aspects {
    aspect_key = "{{index $.TestEnvVars "project_number"}}.us-central1.{{index $.Vars "aspect_type_name"}}-one"
    aspect {
      data = <<EOF
          {"type": "VIEW"    }
        EOF
    }
  }

  aspects {
    aspect_key = "{{index $.TestEnvVars "project_number"}}.us-central1.{{index $.Vars "aspect_type_name"}}-two"
    aspect {
      data = <<EOF
          {"story": "SEQUENCE"    }
        EOF
    }
  }
 depends_on = [google_dataplex_aspect_type.aspect-type-full-two, google_dataplex_aspect_type.aspect-type-full-one]
}