resource "google_network_security_authorization_policy" "<%= ctx[:primary_resource_id] %>" {
  provider               = google-beta
  name                   = "<%= ctx[:vars]['resource_name'] %>"
  labels                 = {
    foo = "bar"
  }
  description            = "my description"
  action                 = "ALLOW"
  rules {
    sources {
      principals = ["namespace/*"]
      ip_blocks = ["1.2.3.0/24"]
    }
  }
}
