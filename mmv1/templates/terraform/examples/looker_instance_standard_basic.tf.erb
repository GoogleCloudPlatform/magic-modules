resource "google_looker_instance" "<%= ctx[:primary_resource_id] %>" {
  name              = "<%= ctx[:vars]["instance_name"] %>"
  platform_edition  = "LOOKER_CORE_STANDARD"
  region            = "us-central1"
  public_ip_enabled = true
  oauth_config {
    client_id = "<%= ctx[:vars]["client_id"] %>"
    client_secret = "<%= ctx[:vars]["client_secret"] %>"
  }

  user_metadata {
    additional_standard_user_count = 1
    additional_viewer_user_count = 1
    additional_developer_user_count = 1
  }

}
