  name = "<%= ctx[:vars]['schema_name'] %>"
  type = "AVRO"

  revision {
    definition = "{\n  \"type\" : \"record\",\n  \"name\" : \"Avro\",\n  \"fields\" : [\n    {\n      \"name\" : \"StringField\",\n      \"type\" : \"string\",\n    \"default\" : \"\"\n    }\n  ]\n}\n"
  }

  revision {
    definition = "{\n  \"type\" : \"record\",\n  \"name\" : \"Avro\",\n  \"fields\" : [\n    {\n      \"name\" : \"StringField\",\n      \"type\" : \"string\",\n    \"default\" : \"\"\n    },\n    {\n      \"name\" : \"IntField\",\n      \"type\" : \"int\",\n    \"default\" : 0\n    }\n  ]\n}\n"
