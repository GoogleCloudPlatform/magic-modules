resource "google_compute_instance" "instance_full" {
  name         = "{{ index $.Vars "instance_name" }}"
  machine_type = "e2-medium"
  zone         = "{{ index $.Vars "zone" }}"

  boot_disk {
    initialize_params {
      image = "debian-cloud/debian-11"
    }
  }

  network_interface {
    network = "default"
  }

  deletion_protection = false

  labels = {
    environment = "test"
    managed-by  = "terraform"
  }
}

resource "google_compute_resource_policy" "policy_full" {
  name   = "{{ index $.Vars "policy_name" }}"
  region = regex("^[a-z]+-[a-z]+\\d+", "{{ index $.Vars "zone" }}")
  
  instance_schedule_policy {
    vm_start_schedule {
      schedule = "0 8 * * *"
    }
    vm_stop_schedule {
      schedule = "0 20 * * *"
    }
    time_zone = "US/Central"
    
    instance_termination_action = "STOP"
  }
}

resource "google_compute_resource_policy_attachment" "{{ $.PrimaryResourceId }}" {
  name     = google_compute_resource_policy.policy_full.name
  instance = google_compute_instance.instance_full.name
  zone     = google_compute_instance.instance_full.zone
}
