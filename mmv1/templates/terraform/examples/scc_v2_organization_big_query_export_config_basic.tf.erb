resource "google_bigquery_dataset" "default" {
  dataset_id                  = "<%= ctx[:vars]['dataset_id'] %>"
  friendly_name               = "test"
  description                 = "This is a test description"
  location                    = "US"
  default_table_expiration_ms = 3600000

  labels = {
    env = "default"
  }
}

resource "google_scc_v2_organization_scc_big_query_exports" "<%= ctx[:primary_resource_id] %>" {
  name         = "<%= ctx[:vars]['name'] %>"
  big_query_export_id    = "<%= ctx[:vars]['big_query_export_id'] %>"
  organization = "<%= ctx[:test_env_vars]['org_id'] %>"
  dataset      = "<%= ctx[:vars]['dataset'] %>"
  location     = "global"
  description  = "Cloud Security Command Center Findings Big Query Export Config"
  filter       = "state=\"ACTIVE\" AND NOT mute=\"MUTED\""
}
