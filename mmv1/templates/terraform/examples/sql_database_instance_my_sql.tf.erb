resource "google_sql_database_instance" "<%= ctx[:primary_resource_id] %>" {
  name             = "<%= ctx[:vars]['database_instance_name'] %>"
  region           = "us-central1"
  database_version = "MYSQL_8_0"
  settings {
    tier = "db-n1-standard-2"
  }
  deletion_protection =  "<%= ctx[:vars]['deletion_protection'] %>"
}

resource "random_password" "pwd" {
    length = 16
    special = false
}

resource "google_sql_user" "user" {
    name = "user"
    instance = google_sql_database_instance.instance.name
    password = random_password.pwd.result
    password_policy {
      allowed_failed_attempts  = 6
      password_expiration_duration  =  "2592000s"
      enable_failed_attempts_check = true
      enable_password_verification = true
  }
}
