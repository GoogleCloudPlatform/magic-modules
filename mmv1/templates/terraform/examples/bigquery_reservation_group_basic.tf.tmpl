resource "google_bigquery_reservation_group" "{{$.PrimaryResourceId}}" {
	name           = "{{index $.Vars "name"}}"
	location       = "us-west2"
	// Set to 0 for testing purposes
	// In reality this would be larger than zero
	slot_capacity     = 0
	edition = "STANDARD"
	ignore_idle_slots = true
	concurrency       = 0
	autoscale {
   	  max_slots = 100
    }
}

resource "google_bigquery_reservation" "{{index $.Vars "reservation_name"}}" {
	name           = "{{index $.Vars "reservation_name"}}"
	location       = "us-west2"
	// Set to 0 for testing purposes
	// In reality this would be larger than zero
	slot_capacity     = 0
	edition = "STANDARD"
	ignore_idle_slots = true
	concurrency       = 0
	autoscale {
   	  max_slots = 100
    }
	reservation_group = "{{index $.Vars "reservation_name"}}"
}