resource "google_cloud_security_compliance_framework" "{{$.PrimaryResourceId}}" {
	name 		   = "organizations/{{index $.TestEnvVars "org_id"}}/locations/global/frameworks/{{index $.Vars "framework_name"}}"
  organization = "{{index $.TestEnvVars "org_id"}}"
  location     = "global"
  framework_id = "{{index $.Vars "framework_name"}}"
  
  display_name = "Terraform Framework Name"
  description  = "An Terraform description for the framework"
  
  cloud_control_details {
		name              = "organizations/{{index $.TestEnvVars "org_id"}}/locations/global/cloudControls/builtin-assess-resource-availability"
		major_revision_id = "1"
    
    parameters {
      name = "location"
      parameter_value {
        string_value = "us-central1"
      }
    }
  }
}
