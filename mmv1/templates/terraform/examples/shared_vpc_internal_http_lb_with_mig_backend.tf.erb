# VPC network
resource "google_compute_network" "ilb_network" {
  name                    = "<%= ctx[:vars]['l7_ilb_network'] %>"
  provider                = google-beta
  auto_create_subnetworks = false
  project                 = "my-host-project-357412"
}

# proxy-only subnet
resource "google_compute_subnetwork" "proxy_subnet" {
  name          = "<%= ctx[:vars]['l7_ilb_proxy_subnet'] %>"
  provider      = google-beta
  ip_cidr_range = "10.0.0.0/24"
  region        = "europe-west1"
  purpose       = "INTERNAL_HTTPS_LOAD_BALANCER"
  role          = "ACTIVE"
  network       = google_compute_network.ilb_network.id
  project       = "my-host-project-357412"
}

# backend subnet
resource "google_compute_subnetwork" "ilb_subnet" {
  name          = "<%= ctx[:vars]['l7_ilb_subnet'] %>"
  provider      = google-beta
  ip_cidr_range = "10.0.1.0/24"
  region        = "europe-west1"
  network       = google_compute_network.ilb_network.id
  project       = "my-host-project-357412"
}

# allow all access from IAP and health check ranges
resource "google_compute_firewall" "fw-iap" {
  project       = "my-host-project-357412"
  name          = "<%= ctx[:vars]['l7_ilb_fw_allow_iap_hc'] %>"
  provider      = google-beta
  direction     = "INGRESS"
  network       = google_compute_network.ilb_network.id
  source_ranges = ["130.211.0.0/22", "35.191.0.0/16", "35.235.240.0/20"]
  allow {
    protocol = "tcp"
  }
}

# allow http from proxy subnet to backends
resource "google_compute_firewall" "fw-ilb-to-backends" {
  project       = "my-host-project-357412"
  name          = "<%= ctx[:vars]['l7_ilb_fw_allow_ilb_to_backends'] %>"
  provider      = google-beta
  direction     = "INGRESS"
  network       = google_compute_network.ilb_network.id
  source_ranges = ["0.0.0.0/0"]
  target_tags   = ["http-server"]
  allow {
    protocol = "tcp"
    ports    = ["80", "443", "8080"]
  }
}

# forwarding rule
resource "google_compute_forwarding_rule" "<%= ctx[:primary_resource_id] %>" {
  name                  = "<%= ctx[:vars]['l7_ilb_forwarding_rule'] %>"
  provider              = google-beta
  region                = "europe-west1"
  depends_on            = [google_compute_subnetwork.proxy_subnet]
  ip_protocol           = "TCP"
  load_balancing_scheme = "INTERNAL_MANAGED"
  port_range            = "80"
  target                = google_compute_region_target_http_proxy.default.id
  network               = google_compute_network.ilb_network.id
  subnetwork            = google_compute_subnetwork.ilb_subnet.id
  network_tier          = "PREMIUM"
  project               = "my-service-project-01-358212"
}

# HTTP target proxy
resource "google_compute_region_target_http_proxy" "default" {
  name     = "<%= ctx[:vars]['l7_ilb_target_http_proxy'] %>"
  provider = google-beta
  region   = "europe-west1"
  url_map  = google_compute_region_url_map.default.id
  project  = "my-service-project-01-358212"
}

# URL map
resource "google_compute_region_url_map" "default" {
  name            = "<%= ctx[:vars]['l7_ilb_regional_url_map'] %>"
  provider        = google-beta
  region          = "europe-west1"
  default_service = google_compute_region_backend_service.default.id
  project         = "my-service-project-01-358212"
}

# regional health check
resource "google_compute_region_health_check" "default" {
  project  = "my-service-project-02-358212"
  name     = "<%= ctx[:vars]['l7_ilb_rhc'] %>"
  provider = google-beta
  region   = "europe-west1"
  http_health_check {
    port_specification = "USE_SERVING_PORT"
  }
}

# regional backend service
resource "google_compute_region_backend_service" "default" {
  project               = "my-service-project-02-358212"
  name                  = "<%= ctx[:vars]['l7_ilb_backend_service'] %>"
  provider              = google-beta
  region                = "europe-west1"
  protocol              = "HTTP"
  load_balancing_scheme = "INTERNAL_MANAGED"
  timeout_sec           = 10
  health_checks         = [google_compute_region_health_check.default.id]
  backend {
    group           = google_compute_region_instance_group_manager.mig.instance_group
    balancing_mode  = "UTILIZATION"
    capacity_scaler = 1.0
  }
}

# health check
resource "google_compute_health_check" "default" {
  project            = "my-service-project-02-358212"
  name               = "<%= ctx[:vars]['l7_ilb_hc'] %>"
  timeout_sec        = 1
  check_interval_sec = 1
  tcp_health_check {
    port = "80"
  }
}

# instance template
resource "google_compute_instance_template" "default" {
  project      = "my-service-project-02-358212"
  name         = "<%= ctx[:vars]['l7_ilb_mig_template'] %>"
  provider     = google-beta
  machine_type = "e2-small"
  tags         = ["http-server"]

  network_interface {
    network    = google_compute_network.ilb_network.id
    subnetwork = google_compute_subnetwork.ilb_subnet.id
    access_config {
      # add external ip to fetch packages
    }
  }
  disk {
    source_image = "debian-cloud/debian-10"
    auto_delete  = true
    boot         = true
  }

  # install nginx and serve a simple web page
  metadata = {
    startup-script = <<-EOF1
      #! /bin/bash
      set -euo pipefail

      export DEBIAN_FRONTEND=noninteractive
      apt-get update
      apt-get install -y nginx-light jq

      NAME=$(curl -H "Metadata-Flavor: Google" "http://metadata.google.internal/computeMetadata/v1/instance/hostname")
      IP=$(curl -H "Metadata-Flavor: Google" "http://metadata.google.internal/computeMetadata/v1/instance/network-interfaces/0/ip")
      METADATA=$(curl -f -H "Metadata-Flavor: Google" "http://metadata.google.internal/computeMetadata/v1/instance/attributes/?recursive=True" | jq 'del(.["startup-script"])')

      cat <<EOF > /var/www/html/index.html
      <pre>
      Name: $NAME
      IP: $IP
      Metadata: $METADATA
      </pre>
      EOF
    EOF1
  }
  lifecycle {
    create_before_destroy = true
  }
}

# MIG
resource "google_compute_region_instance_group_manager" "mig" {
  project  = "my-service-project-02-358212"
  name     = "<%= ctx[:vars]['l7_ilb_mig1'] %>"
  provider = google-beta
  region   = "europe-west1"
  version {
    instance_template = google_compute_instance_template.default.id
    name              = "primary"
  }
  base_instance_name = "vm"
  target_size        = 2
  auto_healing_policies {
    health_check      = google_compute_health_check.default.id
    initial_delay_sec = 300
  }
}

data "google_project" "service_project02" {
  project_id = "my-service-project-02-358212"
}

# IAM Role
resource "google_project_iam_binding" "default" {
  project = "my-host-project-357412"
  role    = "roles/compute.networkUser"

  members = [
    "serviceAccount:${data.google_project.service_project02.number}@cloudservices.gserviceaccount.com",
  ]
}

# test instance
resource "google_compute_instance" "vm-test" {
  project      = "my-service-project-02-358212"
  name         = "<%= ctx[:vars]['l7_ilb_test_vm'] %>"
  provider     = google-beta
  zone         = "europe-west1-b"
  machine_type = "e2-small"
  network_interface {
    network    = google_compute_network.ilb_network.id
    subnetwork = google_compute_subnetwork.ilb_subnet.id
  }
  boot_disk {
    initialize_params {
      image = "debian-cloud/debian-10"
    }
  }
  lifecycle {
    ignore_changes = [
      metadata["ssh-keys"]
    ]
  }
}

