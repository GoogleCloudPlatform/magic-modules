resource "google_firestore_field" "<%= ctx[:primary_resource_id] %>" {
  project    = "<%= ctx[:test_env_vars]['project_id'] %>"
  collection = "chatrooms_%{random_suffix}"
  field      = "`*`"

  index_config {
    indexes {
        order = "ASCENDING"
        query_scope = "COLLECTION_GROUP"
    }
    indexes {
        array_config = "CONTAINS"
    }
  }
  ttl_config {}
}
