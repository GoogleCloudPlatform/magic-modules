# [START cloud_sql_mysql_instance_flags]
resource "google_sql_database_instance" "{{$.PrimaryResourceId}}" {
  database_version = "MYSQL_8_0"
  name             = "{{index $.Vars "mysql_instance"}}"
  region           = "us-central1"
  settings {
    database_flags {
      name  = "general_log"
      value = "on"
    }
    database_flags {
      name  = "skip_show_database"
      value = "on"
    }
    database_flags {
      name  = "wait_timeout"
      value = "200000"
    }
    disk_type             = "PD_SSD"
    tier         = "db-n1-standard-2"
  }
  deletion_protection = "{{index $.Vars "deletion_protection"}}"
}
# [END cloud_sql_mysql_instance_flags]
