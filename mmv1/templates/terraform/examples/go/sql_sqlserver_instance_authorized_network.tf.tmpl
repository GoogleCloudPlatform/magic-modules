# [START cloud_sql_sqlserver_instance_authorized_network]
resource "google_sql_database_instance" "{{$.PrimaryResourceId}}" {
  name = "{{index $.Vars "sqlserver_instance_with_authorized_network"}}"
  region           = "us-central1"
  database_version = "SQLSERVER_2019_STANDARD"
  root_password = "INSERT-PASSWORD-HERE"
  settings {
    tier = "db-custom-2-7680"
    ip_configuration {
      authorized_networks {
        name = "Network Name"
        value = "192.0.2.0/24"
        expiration_time = "3021-11-15T16:19:00.094Z"
      }
    }
  }
  deletion_protection = "{{index $.Vars "deletion_protection"}}"
}
# [END cloud_sql_sqlserver_instance_authorized_network]
