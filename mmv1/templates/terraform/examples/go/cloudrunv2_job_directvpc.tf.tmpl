resource "google_cloud_run_v2_job" "{{$.PrimaryResourceId}}" {
  name     = "{{index $.Vars "cloud_run_job_name"}}"
  location = "us-central1"
  launch_stage = "GA"
  template {
    template{
      containers {
        image = "us-docker.pkg.dev/cloudrun/container/job"
      }
      vpc_access {
        network_interfaces {
          network = "default"
          subnetwork = "default"
          tags = ["tag1", "tag2", "tag3"]
        }
      }
    }
  }
}
