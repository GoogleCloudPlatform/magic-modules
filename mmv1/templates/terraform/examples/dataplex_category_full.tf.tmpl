resource "google_dataplex_glossary" "{{$.PrimaryResourceId}}" {
  name        = "tf-test-glossary%{random_suffix}"
  location    = "{{$.Vars.location}}"
}

resource "google_dataplex_category" "{{$.PrimaryResourceId}}" {
  parent      = "projects/{{index $.TestEnvVars "project_name"}}/locations/{{$.Vars.location}}/glossaries/${google_dataplex_glossary.glossary.name}"
  glossary_id = google_dataplex_glossary.{{$.PrimaryResourceId}}.name
  location    = "{{$.Vars.location}}"
  category_id = "tf-test-category-full%{random_suffix}"

  labels = { "tag": "test-tf" }
  display_name = "terraform category"
  description = "category created by Terraform"
}
