# [START storage_create_lifecycle_setting_tf]
resource "google_storage_bucket" "<%= ctx[:primary_resource_id] %>" {
  name          = "<%= ctx[:vars]['example_bucket'] %>"
  location      = "US"
  force_destroy = true
  uniform_bucket_level_access = true

  lifecycle_rule {
    condition {
      age = 3
    }
    action {
      type = "Delete"
    }
  }
}
# [END storage_create_lifecycle_setting_tf]
