resource "google_compute_region_security_policy" "default" {
  provider    = google-beta
  
  region      = "asia-southeast1"
  name        = "<%= ctx[:vars]['sec_policy_name'] %>"
  description = "region security policy for network match"
  type        = "CLOUD_ARMOR_NETWORK"
}

resource "google_compute_region_security_policy_rule" "<%= ctx[:primary_resource_id] %>" {
  provider = google-beta
  
  region          = "asia-southeast1"
  security_policy = google_compute_region_security_policy.default.name
  description     = "new rule"
  priority        = 100
  match {
    versioned_expr = "SRC_IPS_V1"
    config {
      src_ip_ranges = ["10.10.0.0/16"]
    }
  }
  network_match {
    src_ip_ranges = ["1.1.1.1/32"]
  }
  action          = "allow"
  preview         = true
}
