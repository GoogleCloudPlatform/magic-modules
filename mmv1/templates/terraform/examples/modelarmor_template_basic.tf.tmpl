# This is a Terraform template file (.tf.tmpl) for creating a Template resource.

resource "google_model_armor_template" "basic" {
  location    = "<%= ctx[:vars]['location'] %>"
  template_id = "<%= ctx[:vars]['templateId'] %>"
  provider    = google-beta

  labels = {
    label-key = "<%= ctx[:vars]['labelValue'] %>"
  }
  filter_config {
    rai_settings {
      rai_filters {
        filter_type      = "<%= ctx[:vars]['filter_config_rai_settings_rai_filters_0_filter_type'] %>"
        confidence_level = "<%= ctx[:vars]['filter_config_rai_settings_rai_filters_0_confidence_level'] %>"
      }
    }
    sdp_settings {
      basic_config {
        filter_enforcement = "<%= ctx[:vars]['filter_config_sdp_settings_basic_config_filter_enforcement'] %>"
      }
    }
    pi_and_jailbreak_filter_settings {
      filter_enforcement = "<%= ctx[:vars]['filter_config_pi_and_jailbreak_filter_settings_filter_enforcement'] %>"
      confidence_level   = "<%= ctx[:vars]['filter_config_pi_and_jailbreak_filter_settings_confidence_level'] %>"
    }
    malicious_uri_filter_settings {
      filter_enforcement = "<%= ctx[:vars]['filter_config_malicious_uri_filter_settings_filter_enforcement'] %>"
    }
  }
  template_metadata {
    custom_llm_response_safety_error_message = "<%= ctx[:vars]['template_metadata_custom_llm_response_safety_error_message'] %>"
    # Removed quotes for boolean values
    log_template_operations                  = <%= ctx[:vars]["template_metadata_log_template_operations"] %>
    log_sanitize_operations                  = <%= ctx[:vars]["template_metadata_log_sanitize_operations"] %>
    multi_language_detection {
      enable_multi_language_detection = <%= ctx[:vars]["template_metadata_multi_language_detection_enable_multi_language_detection"] %>
    }
    ignore_partial_invocation_failures = <%= ctx[:vars]["template_metadata_ignore_partial_invocation_failures"] %>
    # Removed quotes for integer values
    custom_prompt_safety_error_code    = <%= ctx[:vars]["template_metadata_custom_prompt_safety_error_code"] %>
    custom_prompt_safety_error_message = "<%= ctx[:vars]["template_metadata_custom_prompt_safety_error_message"] %>"
    custom_llm_response_safety_error_code = <%= ctx[:vars]["template_metadata_custom_llm_response_safety_error_code"] %>
  }
} 