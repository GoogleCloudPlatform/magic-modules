resource "google_compute_instance" "instance_with_atm_tags" {
  provider     = google
  name         = "<%= ctx[:vars]['vm_name'] %>"
  machine_type = "e2-medium"

  params {
    resource_manager_tags = {
      "tagKeys/123" = "tagValues/456"
    }	
  }

  boot_disk {
    initialize_params {
      image = "debian-cloud/debian-11"
      resource_manager_tags = {
        "tagKeys/123" = "tagValues/456"
      }
    }
  }

  network_interface {
    network = "default"
  }
}
