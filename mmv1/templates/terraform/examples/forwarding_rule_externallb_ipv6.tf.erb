resource "google_compute_forwarding_rule" "<%= ctx[:primary_resource_id] %>" {
  provider              = google-beta
  name                  = "<%= ctx[:vars]['forwarding_rule_name'] %>"
  region                = "us-west1"
  port_range            = 80
  ip_protocol           = "TCP"
  ip_version            = "IPV6"
  load_balancing_scheme = "EXTERNAL"
  ip_address            = "2600:1901:4456::1/96"
  network_tier          = "PREMIUM"
  backend_service       = google_compute_region_backend_service.backend.id
  ip_collection         = "projects/zberger-sandbox-276421/regions/us-west1/publicDelegatedPrefixes/tf-test-prefix"
}

resource "google_compute_region_backend_service" "backend" {
  provider              = google-beta
  name                  = "<%= ctx[:vars]['backend_name'] %>"
  region                = "us-west1"
  load_balancing_scheme = "EXTERNAL"
  health_checks         = [google_compute_region_health_check.hc.id]
}

resource "google_compute_region_health_check" "hc" {
  provider           = google-beta
  name               = "check-<%= ctx[:vars]['backend_name'] %>"
  check_interval_sec = 1
  timeout_sec        = 1
  region             = "us-west1"

  tcp_health_check {
    port = "80"
  }
}
