resource "google_os_config_patch_deployment" "<%= ctx[:primary_resource_id] %>" {
  patch_deployment_id = "<%= ctx[:vars]['patch_deployment_id'] %>"

  instance_filter {
    all = true
  }

  recurring_schedule {
    time_zone {
      id = "America/New_York"
    }

    time_of_day {
      hours = 0
      minutes = 30
      seconds = 30
      nanos = 20
    }
  }
}
