resource "google_pubsub_topic" "{{$.PrimaryResourceId}}" {
  name = "{{index $.Vars "topic_name"}}"
}

locals {
  smts = [
    {
      function_name = "redactSSN"
      code = <<EOF
function redactSSN(message, metadata) {
  const data = JSON.parse(message.data);
  delete data['ssn'];
  message.data = JSON.stringify(data);
  return message;
}
EOF
    },
    {
      function_name = "largerSMT",
      # you can retrieve the definitions from files too
      code = file("./path/to/my/function/definition.js")
    },
    {
      function_name = "someSMTWeDisabled",
      code = "..."
      disabled = true
    }
  ]
}

resource "google_pubsub_topic" "topic" {
  name = "example-topic"
  dynamic "message_transforms" {
    for_each = local.smts

    content {
      disabled = each.value.disabled ? each.value.disabled : null
      javascript_udf {
        function_name = each.value.function_name
        code = each.value.code
      }
    }
  }
}
