resource "google_firestore_index" "<%= ctx[:primary_resource_id] %>" {
  project    = "<%= ctx[:test_env_vars]['project_id'] %>"
  database   = "(default)"
  collection = "chatrooms"

  query_scope = "COLLECTION_RECURSIVE"
  api_scope = "DATASTORE_MODE_API"

  fields {
    field_path = "name"
    order      = "ASCENDING"
  }

  fields {
    field_path = "description"
    order      = "DESCENDING"
  }
}
