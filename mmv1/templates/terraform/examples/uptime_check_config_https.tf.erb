resource "google_monitoring_uptime_check_config" "<%= ctx[:primary_resource_id] %>" {
  display_name = "<%= ctx[:vars]["display_name"] %>"
  timeout = "60s"

  http_check {
    path = "/some-path"
    port = "443"
    use_ssl = true
    validate_ssl = true
  }

  monitored_resource {
    type = "uptime_url"
    labels = {
      project_id = "<%= ctx[:test_env_vars]["project_id"] %>"
      host = "192.168.1.1"
    }
  }

  content_matchers {
    content = "example"
  }
}
