resource "google_monitoring_monitored_project" "{{$.PrimaryResourceId}}" {
  metrics_scope = "{{index $.TestEnvVars "project_id"}}"
  name          = google_project.basic.project_id
}

resource "google_project" "basic" {
  project_id = "{{index $.PrefixedVars "monitored_project"}}"
  name       = "{{index $.PrefixedVars "monitored_project"}}-display"
  org_id     = "{{index $.TestEnvVars "org_id"}}"
  deletion_policy = "DELETE"
}
