resource "google_tags_tag_key" "key" {
	parent      = "organizations/{{index $.TestEnvVars "org_id"}}"
	short_name  = "{{index $.PrefixedVars "key_short_name"}}"
	description = "For {{index $.PrefixedVars "key_short_name"}} resources."
}

resource "google_tags_tag_value" "{{$.PrimaryResourceId}}" {
	parent      = google_tags_tag_key.key.id
	short_name  = "{{index $.PrefixedVars "value_short_name"}}"
	description = "For {{index $.PrefixedVars "value_short_name"}} resources."
}
