resource "google_clouddeploy_deploy_policy" "{{$.PrimaryResourceId}}" {
  name     = "{{index $.PrefixedVars "policy"}}"
  location = "us-central1"
  selectors {
    delivery_pipeline {
      id = "{{index $.PrefixedVars "delivery_pipeline"}}"
    }
  }
  rules {
    rollout_restriction {
      id = "rule"
      time_windows {
        time_zone = "America/Los_Angeles"
        weekly_windows {
            start_time {
                hours = 0
                minutes = 0
            }
            end_time {
                hours = "24"
                minutes = "00"
            }
        }
      }
    }
  }
}
