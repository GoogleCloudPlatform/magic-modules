resource "google_firebase_apple_app" "full" {
  provider = google-beta
  project = "{{index $.TestEnvVars "project_id"}}"
  display_name = "{{index $.PrefixedVars "display_name"}}"
  bundle_id = "{{index $.PrefixedVars "bundle_id"}}"
  app_store_id = "{{index $.PrefixedVars "app_store_id"}}"
  team_id = "{{index $.PrefixedVars "team_id"}}"
  api_key_id = google_apikeys_key.apple.uid
}

resource "google_apikeys_key" "apple" {
  provider = google-beta

  name         = "{{index $.PrefixedVars "api_key_name"}}"
  display_name = "{{index $.PrefixedVars "display_name"}}"
  project = "{{index $.TestEnvVars "project_id"}}"
  
  restrictions {
    ios_key_restrictions {
      allowed_bundle_ids = ["{{index $.PrefixedVars "bundle_id"}}"]
    }
  }
}
