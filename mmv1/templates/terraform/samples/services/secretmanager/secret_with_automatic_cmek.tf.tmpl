data "google_project" "project" {}

resource "google_kms_crypto_key_iam_member" "kms-secret-binding" {
  crypto_key_id = "{{index $.PrefixedVars "kms_key_name"}}"
  role          = "roles/cloudkms.cryptoKeyEncrypterDecrypter"
  member        = "serviceAccount:service-${data.google_project.project.number}@gcp-sa-secretmanager.iam.gserviceaccount.com"
}

resource "google_secret_manager_secret" "{{$.PrimaryResourceId}}" {
  secret_id = "{{index $.PrefixedVars "secret_id"}}"

  replication {
    auto {
      customer_managed_encryption {
        kms_key_name = "{{index $.PrefixedVars "kms_key_name"}}"
      }
    }
  }

  depends_on = [ google_kms_crypto_key_iam_member.kms-secret-binding ]
}
