resource "google_bigquery_dataset" "test" {
  dataset_id = "{{index $.PrefixedVars "dataset_id"}}"
}

resource "google_bigquery_connection" "test" {
  connection_id = "{{index $.PrefixedVars "connection_id"}}"
  location      = "US"
  cloud_resource { }
}

resource "google_bigquery_routine" "{{$.PrimaryResourceId}}" {
  dataset_id = google_bigquery_dataset.test.dataset_id
  routine_id = "{{index $.PrefixedVars "routine_id"}}"
  routine_type = "SCALAR_FUNCTION"
  definition_body = ""

  return_type = "{\"typeKind\" :  \"STRING\"}"

  remote_function_options {
    endpoint = "https://us-east1-my_gcf_project.cloudfunctions.net/remote_add"
    connection = google_bigquery_connection.test.name
    max_batching_rows = "10"
    user_defined_context = {
      "z": "1.5",
    }
  }
}