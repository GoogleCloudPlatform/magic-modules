resource "google_vmwareengine_private_cloud" "{{$.PrimaryResourceId}}" {
  location    = "{{index $.TestEnvVars "region"}}-a"
  name        = "{{index $.PrefixedVars "private_cloud_id"}}"
  description = "Sample test PC."
  network_config {
    management_cidr       = "192.168.30.0/24"
    vmware_engine_network = google_vmwareengine_network.pc-nw.id
  }
  management_cluster {
    cluster_id = "{{index $.PrefixedVars "management_cluster_id"}}"
    node_type_configs {
      node_type_id = "standard-72"
      node_count   = 3
    }
  }
}

resource "google_vmwareengine_network" "pc-nw" {
  name        = "{{index $.PrefixedVars "network_id"}}"
  location    = "global"
  type        = "STANDARD"
  description = "PC network description."
}