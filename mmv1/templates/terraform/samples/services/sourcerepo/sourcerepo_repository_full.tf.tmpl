resource "google_service_account" "test_account" {
  account_id   = "{{index $.PrefixedVars "account_id"}}"
  display_name = "Test Service Account"
}

resource "google_pubsub_topic" "topic" {
  name     = "{{index $.PrefixedVars "topic_name"}}"
}

resource "google_sourcerepo_repository" "{{$.PrimaryResourceId}}" {
  name = "{{index $.PrefixedVars "repository_name"}}"
  pubsub_configs {
      topic = google_pubsub_topic.topic.id
      message_format = "JSON"
      service_account_email = google_service_account.test_account.email
  }
}