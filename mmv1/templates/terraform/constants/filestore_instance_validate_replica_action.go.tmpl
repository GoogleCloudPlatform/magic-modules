func validateReplicaAction(v interface{}, k string) (ws []string, errors []error) {
    value := v.(string)
    
    // Define your allowed values here
    allowedValues := map[string]bool{
        "PAUSE":  true,
        "RESUME": true,
    }

    // Check if the value is in the allowed list
    if allowedValues[value] {
        return
    }

    // If validation fails, return an error
    errors = append(errors, fmt.Errorf("%q is not a valid value for %s. Allowed values: PAUSE, RESUME", value, k))
    return
}
