		Providers: testAccProviders,
		Steps: []resource.TestStep{
			{
				Config: testGoogleHealthcareHl7V2Store_basic(projectId, projectOrg, projectBillingAccount, datasetName, hl7V2StoreName),
			},
			{
				ResourceName:      "google_healthcare_hl7v2_store.hl7v2_store",
